<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F2E0"

    android:orientation="vertical"
    app:layout_gravity="center_vertical|center_horizontal|center"
    tools:context=".GameActivity">

    <GridLayout
        android:id="@+id/Titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#30302C"
        android:columnCount="3"
        android:orientation="vertical"
        android:rowCount="3"
        app:layout_gravity="center_vertical|center_horizontal|center"
        tools:context=".GameActivity">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="CARDS LEFT"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardsLeftCount"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="97"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="TIME"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeContainer"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="SCORE"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scoreContainer"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="0"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f8f2e0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center_vertical|fill_vertical|center"
            android:text="SETTINGS"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center_vertical|fill_vertical|center"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center_vertical|fill_vertical|center"
            android:text="MENU"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ascendingCards"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ascendingContainer1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="27.5dp"
            android:layout_weight="1"
            android:background="@drawable/card_container_21_40"
            android:orientation="horizontal"
            android:paddingRight="30dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:layout_weight="1"
                app:srcCompat="@drawable/triangle" />

            <TextView
                android:id="@+id/ascendingCardLeft"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/card_in_play"
                android:paddingLeft="5dp"
                android:shadowColor="@android:color/black"
                android:shadowDx="5.0"
                android:shadowDy="5.0"
                android:shadowRadius="10.0"
                android:text="0"

                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ascendingContainer2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="27.5dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="55dp"
            android:layout_weight="1"
            android:background="@drawable/card_container_0_20"
            android:orientation="horizontal"
            android:paddingLeft="30dp">

            <TextView
                android:id="@+id/ascendingCardRight"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/card_in_play"
                android:paddingLeft="5dp"
                android:shadowColor="@android:color/black"
                android:shadowDx="5.0"
                android:shadowDy="5.0"
                android:shadowRadius="10.0"
                android:text="0"

                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:layout_weight="1"
                app:srcCompat="@drawable/triangle" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/replayButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/replayButton"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:layout_marginLeft="185dp"
            app:srcCompat="@drawable/replay_button" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/descendingCards"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/descendingContainer1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="27.5dp"
            android:layout_marginBottom="25dp"
            android:layout_weight="1"
            android:background="@drawable/card_container_81_plus"
            android:orientation="horizontal"
            android:paddingRight="30dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:layout_weight="1"
                android:rotation="180"
                app:srcCompat="@drawable/triangle" />

            <TextView
                android:id="@+id/descendingCardLeft"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/card_in_play"
                android:paddingLeft="5dp"
                android:shadowColor="@android:color/black"
                android:shadowDx="5.0"
                android:shadowDy="5.0"
                android:shadowRadius="10.0"
                android:text="98"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/descendingContainer2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="27.5dp"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="25dp"
            android:layout_weight="1"
            android:background="@drawable/card_container_0_20"
            android:orientation="horizontal"
            android:paddingLeft="30dp">

            <TextView
                android:id="@+id/descendingCardRight"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/card_in_play"
                android:paddingLeft="5dp"
                android:shadowColor="@android:color/black"
                android:shadowDx="5.0"
                android:shadowDy="5.0"
                android:shadowRadius="10.0"
                android:text="98"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:layout_weight="1"
                android:rotation="180"
                app:srcCompat="@drawable/triangle" />
        </LinearLayout>
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/Cards"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:columnCount="4"
        app:rowCount="2">


        <TextView
            android:id="@+id/card1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/textview_border"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="10.0"
            android:text="0"

            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/card2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/textview_border"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="10.0"
            android:text="0"

            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/card3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/textview_border"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="10.0"
            android:text="0"

            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/card4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/textview_border"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="10.0"
            android:text="0"

            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/card5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/textview_border"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="10.0"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/card6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/textview_border"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="10.0"
            android:text="0"

            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/card7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/textview_border"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="10.0"
            android:text="0"

            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/card8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/textview_border"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="10.0"
            android:text="0"

            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />
    </androidx.gridlayout.widget.GridLayout>

</LinearLayout>
